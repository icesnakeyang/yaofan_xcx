<!--pages/legacy/register/register.wxml-->
<view class="box_view">
  <van-panel title="欢迎注册次第乞食">
    <view>
      <van-cell-group>
        <van-field label="手机号码" placeholder="请输入您的手机号码" border="{{ true }}" bind:change="onPhone" />
        <van-field label="密码" placeholder="请输入登录密码" bind:change="onPassword" />
        <van-field label="确认密码" placeholder="请再次输入登录密码" bind:change="onPassword2" />
        <van-field label="姓名" placeholder="请输入您的真实姓名" bind:change="onName" />
      </van-cell-group>
    </view>
  </van-panel>
</view>

<view class="bt_group_view">
  <van-button type="info" bind:click="onRegister">注册</van-button>
  <van-button type="warning" bind:click="onLogin">登录</van-button>
</view>

<van-notify id="van-notify" />